<section class="tic-section">
    <div class="tic-bg">
        <img src="{{ section.settings.bg-image |img_url: 'master' }}" alt="">
    </div>
    <div class="tic-content">
        <div class="container">
            <div class="tic-in">
                <div class="sec-with-space">
                    <div class="heading center white small-width">
                        <h2>{{ section.settings.heading }}</h2>
                        <p class="small">{{ section.settings.para }}</p>
                    </div>
                    <div class="tic-wrap">
                        {% for block in section.blocks %}
                            <div class="tic-item">
                                <div class="tici-image">
                                    <img src="{{ block.settings.icon |img_url: 'master' }}" alt="block.settings.icon.alt">
                                </div>
                                <div class="tici-text">{{ block.settings.text }}</div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{% schema %}
{
  "name": "Three Icons Section",
  "settings": [
    {
        "type": "image_picker",
        "id": "bg-image",
        "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "para",
      "label": "Paragraph"
    }
  ],
  "blocks": [
    {
      "name": "block_item",
      "type": "cards",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Block Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Block Content"
        }
      ]
    }
  ]
}
{% endschema %}