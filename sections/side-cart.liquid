<div class="side-cart">
  <div class="cart-loader">
    <div class="loader-spinner"></div>
  </div>
  
  <div class="cart-recommendation-wrapper">
    <div class="cr-head">you may also like</div>
    <div class="cart-recommendation" data-lenis-prevent></div>
  </div>
  <div class="sc-wrapper">
    <div class="sc-head">
      <div class="sch-left">
        <p>
          Cart
          <span id="cart_item_count">({{ cart.item_count }} items)</span>
        </p>
        {% if cart.item_count > 0 %}
          <a href="{{ routes.cart_url }}">View Cart</a>
        {% endif %}
      </div>
      <div class="sc-close">
        {% render 'cross' %}
      </div>
    </div>
    {% render 'cart-shipping-goal' %}
    <div
      class="sc-shipping-arrival"
      data-user-language="{{ request.locale.name }}"
      data-user-iso="{{ request.locale.iso_code }}"
      data-user-selected-country={{ localization.country.iso_code | json }}>
      {% render 'shipping-icon' %}
      <p>Arrives
        <span id="arrival-date">Sep 2 - Sep 4</span>
      </p>

      <script>
        document.addEventListener('DOMContentLoaded', async () => {
          try {
            const response = await fetch('/cart.js');
            const cart = await response.json();

            const scriptTag = document.createElement('script');
            scriptTag.id = 'cart-data';
            scriptTag.type = 'application/json';
            scriptTag.textContent = JSON.stringify(cart);
            const cartData = document.querySelector(".sc-shipping-arrival");

            cartData.appendChild(scriptTag);
          } catch (error) {
            console.error('Error fetching cart:', error);
          }
        });
      </script>
    </div>
    <div class="sc-in">
      <div class="side-cart-with-items" data-lenis-prevent></div>
    </div>
    <div class="sc-footer">
      {% render 'discount-code-field' %}
      <div class="cart-totals">
        <div class="cart-subtotal">
          <p class="cs-title">Subtotal</p>
          <p class="subtotal-amount cs-res">0.00</p>
        </div>

        <div class="cart-discount" style="display:none;">
          <p class="cs-title">Discount:</p>
          <p class="discount-amount cs-res">-0.00</p>
        </div>

        <div class="cart-shipping">
          <p class="cs-title">Shipping
            <span>(calc. at the checkout)</span>
          </p>
          <p class="shipping-amount cs-res">Calculated at checkout</p>
        </div>

        <div class="cart-total">
          <p class="cs-title">Total <span>incl. VAT</span></p>
          <p class="total-amount cs-res">0.00</p>
        </div>
      </div>
      <form action="/checkout" method="post">
        <button
          name="checkout"
          type="submit"
          class="checkout-btn custom-btn filled"
          style="width: 100%;">
          <span class="checkout-txt">Checkout</span>
          <span class="checkout-total">0.00</span>
        </button>
      </form>
    </div>
  </div>
</div>


<script id="cart_function">
  // CONFIG & STATE
  let shippingWasReached = false;
  let giftWasReached = false;
  const FREE_GIFT_VARIANT_ID = "{{ settings.cart_free_gift_product.first_available_variant.id }}"; 

  document.addEventListener('DOMContentLoaded', function () {
    const sideCart = document.querySelector('.sideCart');
    const cartItemsContainer = document.querySelector('.sc-in');
    const cartItemsWrapper = document.querySelector('.side-cart-with-items');
    const cartFooter = document.querySelector('.sc-footer');
    const body = document.querySelector('body');
    const html = document.querySelector('html');
    const loader = document.querySelector('.cart-loader');

    function formatMoney(cents) {
      const value = (cents / 100).toFixed(2);
      const symbol = window.currencySymbol || '';
      const code = window.activeCurrency || '';
      return `${symbol}${value} ${code}`;
    }

    function showLoader() { loader?.classList.add('active'); }
    function hideLoader() { loader?.classList.remove('active'); }

    // --- 1. PRODUCT CARD SYNC (The plus/minus on collection pages) ---
    window.syncAllCardsWithCart = async function(cartData) {
      const cart = cartData || await fetch(window.Shopify.routes.root + 'cart.js').then(r => r.json());
      document.querySelectorAll('.fc_add_to_cart').forEach(card => {
        const variantId = card.closest('[data-variant-id]')?.dataset.variantId || card.dataset.variantId;
        if (!variantId) return;
        const cartItem = cart.items.find(item => item.variant_id.toString() === variantId.toString());
        if (cartItem && cartItem.quantity > 0) {
          card.classList.add('active'); 
          const qtyValue = card.querySelector('.qty-value');
          if (qtyValue) qtyValue.innerText = cartItem.quantity;
        } else {
          card.classList.remove('active');
          const btn = card.querySelector('.add-to-cart-btn');
          if (btn) { btn.innerText = 'Add to Cart'; btn.disabled = false; }
        }
      });
    };

    // --- 2. RECOMMENDATIONS LOGIC ---
    const recommendedCart = async () => {
      const recommendationWrapper = document.querySelector('.cart-recommendation');
      const recommendationIn = document.querySelector('.cart-recommendation-wrapper');
      if (!recommendationIn || !recommendationWrapper) return;

      try {
        const cartRes = await fetch('/cart.js');
        const cart = await cartRes.json();

        const renderProducts = (products) => {
          if (!products || !products.length) { recommendationIn.style.display = 'none'; return; }
          recommendationIn.style.display = 'flex';
          let html = '';
          products.forEach((product) => {
            const imageSrc = typeof product.featured_image === 'string' ? product.featured_image : product.featured_image?.src || product.images?.[0]?.src || '';
            const varId = product.variants?.[0]?.id || '';
            html += `
              <div class="recommended-item">
                <div class="ri-img"><img src="${imageSrc}" alt="${product.title}"></div>
                <div class="ri-txt"><p class="rit-title">${product.title}</p></div>
                <div class="ri-form">
                  <form action="/cart/add" method="post">
                    <input type="hidden" name="id" value="${varId}">
                    <div class="fc_add_to_cart">
                      <button type="submit" class="add-to-cart">Add to Cart</button>
                    </div>
                  </form>
                </div>
              </div>`;
          });
          recommendationWrapper.innerHTML = html;
          attachAddToCartListeners(recommendationWrapper);
        };

        if (cart.items.length > 0) {
          const res = await fetch(`/recommendations/products.json?product_id=${cart.items[0].product_id}&limit=4`);
          const data = await res.json();
          renderProducts(data.products || []);
        } else {
          const fallbackRes = await fetch(`/collections/fruit/products.json?limit=4`);
          const fallbackData = await fallbackRes.json();
          renderProducts(fallbackData.products || fallbackData);
        }
      } catch (e) { console.error(e); }
    };

    // --- 3. PROGRESS BAR & AUTO-GIFT ---
    function updateShippingGoal(cart) {
      const goalContainer = document.querySelector('.cart-shipping-goal');
      if (!goalContainer || !cart) return;
      const x_ship = parseInt(goalContainer.dataset.thresholdShipping);
      const y_gift = parseInt(goalContainer.dataset.thresholdGift);
      const total = cart.total_price;
      const progressFill = document.getElementById('shipping-goal-progress');
      const messageEl = document.getElementById('shipping-goal-message');

      const percentage = Math.min((total / y_gift) * 100, 100);
      if (progressFill) {
        progressFill.style.width = percentage + '%';
        progressFill.style.backgroundColor = total >= x_ship ? '#2e7d32' : '#81c784';
      }
      
      const shipMarker = document.querySelector('.shipping-unlocked');
      const giftMarker = document.querySelector('.goal-marker-gift');
      if (total >= x_ship) shipMarker?.classList.add('achieved'); else shipMarker?.classList.remove('achieved');
      if (total >= y_gift) {
        if (!giftWasReached && typeof triggerConfetti === 'function') triggerConfetti();
        giftWasReached = true; giftMarker?.classList.add('achieved');
      } else { giftWasReached = false; giftMarker?.classList.remove('achieved'); }

      if (total < x_ship) messageEl.innerHTML = `Spend <span class="goal-highlight">${formatMoney(x_ship - total)}</span> more for <b>Free Shipping</b>`;
      else if (total < y_gift) messageEl.innerHTML = `<b>Free Shipping unlocked!</b> Spend <span class="goal-highlight">${formatMoney(y_gift - total)}</span> more for a <b>Free Gift</b>`;
      else messageEl.innerHTML = `<span class="goal-highlight">All rewards unlocked!</span>`;
    }

    async function handleFreeGift(cart) {
      if (!FREE_GIFT_VARIANT_ID) return false;
      const goalContainer = document.querySelector('.cart-shipping-goal');
      if (!goalContainer) return false;
      const y_gift = parseInt(goalContainer.dataset.thresholdGift);
      const giftItem = cart.items.find(item => item.variant_id.toString() === FREE_GIFT_VARIANT_ID);
      if (cart.total_price >= y_gift && !giftItem) {
        await fetch('/cart/add.js', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ id: FREE_GIFT_VARIANT_ID, quantity: 1, properties: { '_is_free_gift': 'true' } }) });
        return true; 
      }
      if (cart.total_price < y_gift && giftItem) {
        await fetch('/cart/change.js', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ id: giftItem.key, quantity: 0 }) });
        return true;
      }
      return false;
    }

    // --- 4. MAIN RENDER FUNCTION ---
    window.loadCartItems = async function() {
      showLoader();
      try {
        const res = await fetch(`${window.Shopify.routes.root}cart.js?v=${new Date().getTime()}`);
        let cart = await res.json();

        // âœ… INSERT THE GIFT LOGIC HERE
        // This checks if the gift needs to be added or removed before anything else happens
        const needsRefresh = await handleFreeGift(cart);
        if (needsRefresh) {
          // If handleFreeGift added/removed an item, we MUST fetch the cart again
          const freshRes = await fetch(`${window.Shopify.routes.root}cart.js?v=${new Date().getTime()}`);
          cart = await freshRes.json(); 
        }

        // 2. Now proceed with the rest of your UI updates using the fresh 'cart' object
        updateShippingGoal(cart);

        // 1. Sync header counts
        const cartCountSpan = document.getElementById('cart_item_count');
        const headCount = document.querySelector('.header__cart-quantity');
        if (cartCountSpan) cartCountSpan.textContent = `(${cart.item_count} items)`;
        if (headCount) headCount.textContent = cart.item_count;

        // 2. Empty Cart Handling
        if (cart.items.length === 0) {
          cartItemsContainer.innerHTML = `<div class="side-cart-empty">Your basket is empty</div>`;
          if (cartItemsWrapper) cartItemsWrapper.style.display = 'none';
          if (cartFooter) cartFooter.style.display = 'none';
          updateShippingGoal(cart);
          recommendedCart();
          return;
        }

        // 3. Gift Logic Check
        if (await handleFreeGift(cart)) {
          const freshRes = await fetch(`${window.Shopify.routes.root}cart.js?v=${new Date().getTime()}`);
          cart = await freshRes.json();
        }

        // 4. Update UI Elements
        updateShippingGoal(cart);
        recommendedCart();
        if (window.syncAllCardsWithCart) window.syncAllCardsWithCart(cart);
        if (cartItemsWrapper) cartItemsWrapper.style.display = 'block';
        if (cartFooter) cartFooter.style.display = 'block';

        // 5. Render Items
        const itemHtmlPromises = cart.items.map(async (item) => {
          const isGift = item.variant_id.toString() === FREE_GIFT_VARIANT_ID;
          return `
            <div class="cart-item ${isGift ? 'is-free-gift' : ''}" data-key="${item.key}">
              <div class="cart-item-left">
                <div class="cart-item-image"><img src="${item.image}" alt="${item.product_title}" class="cart-image" /></div>
                <div class="cart-item-info">
                  <p class="cart-item-title">${item.product_title}</p>
                  <p class="cart-price">
                    ${isGift ? `<span style="color:#28a745; font-weight:bold;">FREE</span> <s>${formatMoney(item.original_price)}</s>` : formatMoney(item.final_line_price)}
                  </p>
                </div>
              </div>
              <div class="cart-qty">
                <button class="qty-btn minus" data-key="${item.key}" data-qty="${item.quantity}">
                  ${isGift ? `{% render 'bin-icon' %}` : (item.quantity > 1 ? `{% render 'minus-icon' %}` : `{% render 'bin-icon' %}`)}
                </button>
                <span class="qty-count">${item.quantity}</span>
                <button class="qty-btn plus ${isGift ? 'disabled' : ''}" data-key="${item.key}" data-qty="${item.quantity}" style="${isGift ? 'opacity:0.5; pointer-events:none;' : ''}">
                  {% render 'plus-icon' %}
                </button>
              </div>
            </div>`;
        });
        const allItemsHTML = await Promise.all(itemHtmlPromises);
        if (cartItemsWrapper) cartItemsWrapper.innerHTML = allItemsHTML.join('');
        attachQtyHandlers();



        // 6. TOTALS & DISCOUNTS CALCULATION
        let originalSubtotal = 0;
        cart.items.forEach(item => { originalSubtotal += item.original_line_price; });
        const discountedSubtotal = cart.items_subtotal_price;
        const discountAmount = originalSubtotal - discountedSubtotal;
        let visualTotal = cart.total_price;

        // Update subtotal UI
        const subtotalDiv = document.querySelector('.subtotal-amount');
        if (subtotalDiv) subtotalDiv.innerHTML = formatMoney(originalSubtotal); 

        const discountRow = document.querySelector('.cart-discount');
        const discountDiv = document.querySelector('.discount-amount');
        if (discountAmount > 0) {
          if (discountRow) discountRow.style.display = 'flex';
          if (discountDiv) discountDiv.innerHTML = `- ${formatMoney(discountAmount)}`;
          // Sync custom discount badges
          document.querySelectorAll('discount-field').forEach(df => { if (typeof df.updateFromCart === 'function') df.updateFromCart(cart); });
        } else {
          if (discountRow) discountRow.style.display = 'none';
        }

        // Shipping Milestone Fix
        const x_ship = parseInt(document.querySelector('.cart-shipping-goal')?.dataset.thresholdShipping);
        const shippingAmountDiv = document.querySelector('.shipping-amount');
        if (visualTotal >= x_ship && shippingAmountDiv) {
          shippingAmountDiv.innerHTML = `<span style="color:#28a745; font-weight:bold;">FREE</span>`;
        } else if (shippingAmountDiv) {
          shippingAmountDiv.innerHTML = `Calculated at checkout`;
          if (typeof fetchShippingRateByRegion === 'function') fetchShippingRateByRegion(); 
        }

        // Adjust for gift price in total
        const giftInCart = cart.items.find(i => i.variant_id.toString() === FREE_GIFT_VARIANT_ID);
        if (giftInCart && visualTotal >= parseInt(document.querySelector('.cart-shipping-goal')?.dataset.thresholdGift)) {
          visualTotal -= giftInCart.final_line_price;
        }

        document.querySelectorAll('.total-amount, .checkout-total').forEach(el => el.innerHTML = formatMoney(visualTotal));
        document.querySelector('.subtotal-amount').innerHTML = formatMoney(originalSubtotal);

      } catch (err) { console.error(err); } finally { hideLoader(); }
    };

    // --- 5. EVENT LISTENERS ---
    document.querySelector('.cart-open')?.addEventListener('click', () => { sideCart?.classList.add('active'); body?.classList.add('stay'); html?.classList.add('stay'); loadCartItems(); });
    document.querySelector('.sc-close')?.addEventListener('click', () => { sideCart?.classList.remove('active'); body?.classList.remove('stay'); html?.classList.remove('stay'); });

    function attachQtyHandlers() {
      cartItemsContainer?.querySelectorAll('.qty-btn.minus').forEach(btn => { btn.onclick = async () => await window.updateCartItem(btn.dataset.key, Math.max(0, Number(btn.dataset.qty) - 1)); });
      cartItemsContainer?.querySelectorAll('.qty-btn.plus').forEach(btn => { btn.onclick = async () => await window.updateCartItem(btn.dataset.key, Number(btn.dataset.qty) + 1); });
    }

    function attachAddToCartListeners(scope = document) {
      scope.querySelectorAll('form[action$="/cart/add"]').forEach(form => {
        if (form.dataset.listener === 'true') return;
        form.dataset.listener = 'true';
        form.querySelector('button')?.addEventListener('click', async (e) => {
          e.preventDefault(); showLoader();
          await fetch('/cart/add.js', { method: 'POST', body: new FormData(form) });
          await loadCartItems(); hideLoader();
        });
      });
    }

    window.updateCartItem = async function(key, quantity) {
      showLoader();
      await fetch('/cart/change.js', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ id: key, quantity }) });
      await loadCartItems();
    };

    function triggerConfetti() {
      const container = document.querySelector('.cart-shipping-goal');
      if (!container) return;
      for (let i = 0; i < 30; i++) {
        const piece = document.createElement('div'); piece.className = 'confetti-piece'; piece.style.left = Math.random() * 100 + '%';
        piece.style.backgroundColor = ['#28a745', '#ffd700', '#ff4d4d'][Math.floor(Math.random() * 3)];
        container.appendChild(piece); setTimeout(() => piece.remove(), 2000);
      }
    }

    loadCartItems();
  });
</script>

