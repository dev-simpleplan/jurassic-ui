    (function () {
      // Capture submits early
      document.addEventListener('submit', function (e) {
        const form = e.target;
        if (!form || form.getAttribute('action') !== '/cart/add') return;

        // if already submitting, stop duplicate
        if (form.dataset.submitting === 'true') {
          e.preventDefault();
          return;
        }

        form.dataset.submitting = 'true';

        // Re-enable after a short safe timeout
        setTimeout(() => {
          form.dataset.submitting = 'false';
        }, 3000);
      }, true);
    })();


    function getDiscountCodesFromCart(cart) {
      const codes = [];

      // Cart-level discounts
      if (cart.cart_level_discount_applications?.length) {
        cart.cart_level_discount_applications.forEach(d => {
          if (d.type === 'discount_code') {
            codes.push(d.title);
          }
        });
      }

      // Line-level discounts
      cart.items.forEach(item => {
        item.line_level_discount_allocations.forEach(allocation => {
          if (allocation.discount_application.type === 'discount_code') {
            codes.push(allocation.discount_application.title);
          }
        });
      });

  return [...new Set(codes)];
}

let shippingWasReached = false;
let giftWasReached = false;

function updateShippingGoal(cart) {
  const goalContainer = document.querySelector('.cart-shipping-goal');
  if (!goalContainer) return;

  const x_ship = parseInt(goalContainer.dataset.thresholdShipping);
  const y_gift = parseInt(goalContainer.dataset.thresholdGift);
  const total = cart.total_price;

  // Select elements once
  const shipMarker = document.querySelector('.shipping-unlocked');
  const giftMarkerElement = document.querySelector('.goal-marker-gift');
  const progressFill = document.getElementById('shipping-goal-progress');
  const messageEl = document.getElementById('shipping-goal-message');

  // 1. Update Bar Width & Color
  const percentage = Math.min((total / y_gift) * 100, 100);
  if (progressFill) {
    progressFill.style.width = percentage + '%';
    // Turn bar green if first milestone is reached
    progressFill.style.backgroundColor = total >= x_ship ? '#28a745' : '#4caf50';
  }

  // 2. Milestone Achievement & Celebration Logic
  if (total >= x_ship) {
    if (!shippingWasReached) {
      shippingWasReached = true;
      console.log("üéâ Free Shipping Unlocked!");
    }
    shipMarker?.classList.add('achieved');
  } else {
    shippingWasReached = false;
    shipMarker?.classList.remove('achieved');
  }

  if (total >= y_gift) {
    if (!giftWasReached) {
      giftWasReached = true;
      console.log("üéÅ Free Gift Unlocked!");
      if (typeof triggerConfetti === 'function') triggerConfetti();
    }
    giftMarkerElement?.classList.add('achieved');
  } else {
    giftWasReached = false;
    giftMarkerElement?.classList.remove('achieved');
  }

  // 3. Dynamic Text Message
  if (total < x_ship) {
    messageEl.innerHTML = `Spend <span class="goal-highlight">${formatMoney(x_ship - total)}</span> more for <b>Free Shipping</b>`;
  } else if (total < y_gift) {
    messageEl.innerHTML = `<b>Free Shipping unlocked!</b> Spend <span class="goal-highlight">${formatMoney(y_gift - total)}</span> more for a <b>Free Gift</b>`;
  } else {
    messageEl.innerHTML = `<span class="goal-highlight">All rewards unlocked!</span> Check your cart for your gift.`;
  }
}

// Replace with your actual gift variant ID from Admin
const FREE_GIFT_VARIANT_ID = "{{ settings.cart_free_gift_product.first_available_variant.id }}";

async function handleFreeGift(cart) {
  const goalContainer = document.querySelector('.cart-shipping-goal');
  if (!goalContainer || !FREE_GIFT_VARIANT_ID) return false;

  const y_gift = parseInt(goalContainer.dataset.thresholdGift);
  const giftItem = cart.items.find(item => item.variant_id.toString() === FREE_GIFT_VARIANT_ID);
  
  // Add gift if total >= Y and not already there
  if (cart.total_price >= y_gift && !giftItem) {
    await fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ id: FREE_GIFT_VARIANT_ID, quantity: 1, properties: { '_is_free_gift': 'true' } })
    });
    return true; 
  }
  // Remove gift if total < Y and it is currently there
  if (cart.total_price < y_gift && giftItem) {
    await fetch('/cart/change.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ id: giftItem.key, quantity: 0 })
    });
    return true;
  }
  return false;
}

function triggerConfetti() {
  const container = document.querySelector('.cart-shipping-goal');
  for (let i = 0; i < 30; i++) {
    const confetti = document.createElement('div');
    confetti.className = 'confetti-piece';
    confetti.style.left = Math.random() * 100 + '%';
    confetti.style.backgroundColor = ['#28a745', '#ffd700', '#ff4d4d'][Math.floor(Math.random() * 3)];
    container.appendChild(confetti);
    
    setTimeout(() => confetti.remove(), 2000);
  }
}

    // Load and Render Cart Items
    window.loadCartItems = async function() {
      showLoader();
      try {
