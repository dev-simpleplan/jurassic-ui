<div class="side-cart">
  <div class="cart-loader">
    <div class="loader-spinner"></div>
  </div>
  <div class="cart-recommendation-wrapper">
    <div class="cr-head">you may also like</div>
    <div class="cart-recommendation" data-lenis-prevent></div>
  </div>
  <div class="sc-wrapper">
    <div class="sc-head">
      <div class="sch-left">
        <p>
          Cart
          <span id="cart_item_count">({{ cart.item_count }} items)</span>
        </p>
        {% if cart.item_count > 0 %}
          <a href="{{ routes.cart_url }}">View Cart</a>
        {% endif %}
      </div>
      <div class="sc-close">
        {% render 'cross' %}
      </div>
    </div>
    <div
      class="sc-shipping-arrival"
      data-user-language="{{ request.locale.name }}"
      data-user-iso="{{ request.locale.iso_code }}"
      data-user-selected-country={{ localization.country.iso_code | json }}>
      {% render 'shipping-icon' %}
      <p>Arrives
        <span id="arrival-date">Sep 2 - Sep 4</span>
      </p>

      <script>
        document.addEventListener('DOMContentLoaded', async () => {
          try {
            const response = await fetch('/cart.js');
            const cart = await response.json();

            const scriptTag = document.createElement('script');
            scriptTag.id = 'cart-data';
            scriptTag.type = 'application/json';
            scriptTag.textContent = JSON.stringify(cart);
            const cartData = document.querySelector(".sc-shipping-arrival");

            cartData.appendChild(scriptTag);

            console.log('üõí Cart data:', cart);
          } catch (error) {
            console.error('Error fetching cart:', error);
          }
        });
      </script>
    </div>
    <div class="sc-in">
      <div class="side-cart-with-items" data-lenis-prevent></div>
    </div>
    <div class="sc-footer">
      {% render 'discount-code-field' %}
      <div class="cart-totals">
        <div class="cart-subtotal">
          <p class="cs-title">Subtotal</p>
          <p class="subtotal-amount cs-res">0.00</p>
        </div>
        <div class="cart-shipping">
          <p class="cs-title">shipping
            <span>(calc. at the checkout)</span>
          </p>
          <p class="shipping-amount cs-res">Calculated at checkout</p>
        </div>
        <div class="cart-total">
          <p class="cs-title">Total
            <span>incl. VAT</span>
          </p>
          <p class="total-amount cs-res">0.00</p>
        </div>
      </div>
      <form action="/checkout" method="post">
        <button
          name="checkout"
          type="submit"
          class="checkout-btn custom-btn filled"
          style="width: 100%;">
          <span class="checkout-txt">Checkout</span>
          <span class="checkout-total">0.00</span>
        </button>
      </form>
    </div>
  </div>
</div>


<script id="cart_function">

  document.addEventListener('DOMContentLoaded', function () {
    const sideCart = document.querySelector('.sideCart');
    const cartItemsContainer = document.querySelector('.sc-in');
    const cartItemsWrapper = document.querySelector('.side-cart-with-items');
    const cartIn = document.querySelector('.sc-wrapper');
    const cartFooter = document.querySelector('.sc-footer');
    const body = document.querySelector('body');
    const html = document.querySelector('html');



    function formatMoney(cents) {
      const value = (cents / 100).toFixed(2);
      const symbol = window.currencySymbol || '';
      const code = window.activeCurrency || '';
      return `${symbol}${value} ${code}`;
    }

    document.querySelector('.cart-open')?.addEventListener('click', function () {
      sideCart.classList.add('active');
      body.classList.add('stay');
      html.classList.add('stay');
      loadCartItems();
    });

    document.querySelector('.sc-close')?.addEventListener('click', function () {
      sideCart.classList.remove('active');
      body.classList.remove('stay')
      html.classList.remove('stay')
    });

    const loader = document.querySelector('.cart-loader');

    function showLoader() {
      loader?.classList.add('active');
    }

    function hideLoader() {
      loader?.classList.remove('active');
    }

    const recommendedCart = async () => {
      const recommendationWrapper = document.querySelector('.cart-recommendation');
      const recommendationIn = document.querySelector('.cart-recommendation-wrapper');
      if (!recommendationIn) return;

      try {
        showLoader();

        // ‚úÖ Step 1: Get the current cart
        const cartRes = await fetch('/cart.js');
        const cart = await cartRes.json();
        if (!cart.items.length) {
          recommendationIn.style.display = 'none';
          hideLoader();
          return;
        }

        // ‚úÖ Step 2: Get the first product ID from the cart
        const firstProductId = cart.items[0].product_id;
        if (!firstProductId) {
          recommendationIn.style.display = 'none';
          hideLoader();
          return;
        }

        // ‚úÖ Step 3: Fetch recommended products
        const response = await fetch(`/recommendations/products.json?product_id=${firstProductId}&limit=8`);
        const data = await response.json();
        console.log(data);

        if (!data.products || !data.products.length) {
          recommendationIn.style.display = 'none';
          hideLoader();
          return;
        }

        // ‚úÖ Step 4: Render recommended products
        recommendationIn.style.display = 'flex';
        let recommendationsHtml = '';

        data.products.forEach((product) => {
          const imageSrc = product.featured_image || (product.images.length ? product.images[0] : '');
          const price = formatMoney(product.price);
          const varId = product.variants && product.variants.length ? product.variants[0].id : '';


          recommendationsHtml += `
        <div class="recommended-item">
              <div class="ri-img">
                <img src="${imageSrc}" alt="${product.title}" class="product-card__image">
              </div>
              <div class="ri-txt">
                <p class="rit-title">${product.title}</p>
              </div>
              <div class="ri-form">
                <form action="/cart/add" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="${varId}">
                        <input type="hidden" name="quantity" value="1">
                        <div class="fc_add_to_cart">
                            <span class="remove_product">
                                <svg width="23" height="22" viewBox="0 0 23 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5.09961 11.3408H17.8457" stroke="#151515" stroke-width="1.82087" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                            <button type="submit" class="add-to-cart" {% unless product.available %} {% endunless %}>
                                {% if product.available %}Add to Cart{% else %}Sold Out{% endif %}
                            </button>
                            <span class="add_product">
                                <svg width="23" height="22" viewBox="0 0 23 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M11.5645 4.96582V17.7119" stroke="#151515" stroke-width="1.82087" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M5.19727 11.3408H17.9434" stroke="#151515" stroke-width="1.82087" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                        </div>
                    </form>
              </div>
        </div>
      `;
        });

        recommendationWrapper.innerHTML = recommendationsHtml;
      attachAddToCartListeners();

      } catch (error) {
        console.error('‚ùå Error fetching product recommendations:', error);
        const recommendationWrapper = document.querySelector('.cart-recommendation');
        if (recommendationWrapper) recommendationWrapper.style.display = 'none';
      } finally {
        hideLoader();
      }
    };


    function attachAddToCartListeners(scope = document) {
  // Find all forms that add to cart (use ends-with action for safety)
  scope.querySelectorAll('form[action$="/cart/add"]').forEach(form => {
    // Prevent adding multiple listeners to same form
    if (form.dataset.listenerAttached === 'true') return;
    form.dataset.listenerAttached = 'true';

    // Prefer a custom button class, fallback to any submit button
    const addToCartBtn = form.querySelector('.add-to-cart-btn') || form.querySelector('button[type="submit"]');

    if (!addToCartBtn) return;

    addToCartBtn.addEventListener('click', async (e) => {
      // Prevent native form submit so we control requests
      e.preventDefault();

      // Guard against duplicates
      if (form.dataset.submitting === 'true') return;
      form.dataset.submitting = 'true';
      showLoader();

      try {
        const formData = new FormData(form);

        // If button has data-variant-id and input id is missing, ensure it exists
        const btnVariantId = addToCartBtn.dataset.variantId;
        if (btnVariantId && !form.querySelector('input[name="id"]')) {
          formData.set('id', btnVariantId);
        }

        const response = await fetch(window.Shopify.routes.root + 'cart/add.js', {
          method: 'POST',
          body: formData
        });

        if (!response.ok) throw new Error('Network response was not ok');

        const data = await response.json();
        console.log('Added to cart:', data);

        // Open side cart and re-render
        sideCart.classList.add('active');
        await loadCartItems();
        await fetchShippingRateByRegion();
        await recommendedCart();
      } catch (err) {
        console.error('Error adding to cart:', err);
      } finally {
        form.dataset.submitting = 'false';
        hideLoader();
      }
    });
  });
}


  
    (function () {
      // Capture submits early
      document.addEventListener('submit', function (e) {
        const form = e.target;
        if (!form || form.getAttribute('action') !== '/cart/add') return;

        // if already submitting, stop duplicate
        if (form.dataset.submitting === 'true') {
          e.preventDefault();
          return;
        }

        form.dataset.submitting = 'true';

        // Re-enable after a short safe timeout
        setTimeout(() => {
          form.dataset.submitting = 'false';
        }, 3000);
      }, true);
    })();




    // Load and Render Cart Items
    async function loadCartItems() {
      showLoader();
      try {
        const res = await fetch(window.Shopify.routes.root + 'cart.js');
        const cart = await res.json();
        console.log('Cart Data:', cart);

        if (!cartItemsContainer) return;

        const subtotalDiv = document.querySelector('.subtotal-amount');
        const shippingAmountDiv = document.querySelector('.shipping-amount');
        const totalDivs = document.querySelectorAll('.total-amount, .checkout-total');
        const cartCountSpan = document.getElementById('cart_item_count');
        const headCount = document.querySelector('.header__cart-quantity');

        // üßπ Hide/Show wrappers properly
        if (cart.items.length === 0) {
          // Show empty cart
          cartItemsContainer.innerHTML = `
            <div class="side-cart-empty">
              <div class="jf-icon">{% render 'jf' %}</div>
              <div class="sce-txt">
                <h3>uh-oh!</h3>
                <p>You have an empty basket.</p>
              </div>
            </div>
          `;

          if (cartItemsWrapper) cartItemsWrapper.style.display = 'none';
          if (cartFooter) cartFooter.style.display = 'none';
          const cartRec = document.querySelector('.cart-recommendation');
          if (cartRec) cartRec.style.display = 'none'

          if (cartCountSpan) cartCountSpan.textContent = `(0 item)`;
          if (headCount) headCount.textContent = '0';
          return;
        }

        // ‚úÖ If cart has items, make sure both sections are visible
        if (cartItemsWrapper) {
          cartItemsWrapper.style.display = 'block';
        }
        if (cartFooter) cartFooter.style.display = 'block';

        const emptyDiv = cartItemsContainer.querySelector('.side-cart-empty');
        if (emptyDiv) {
          emptyDiv.remove();
          cartItemsContainer.appendChild(cartItemsWrapper);
        }
        const cartRec = document.querySelector('.cart-recommendation');
        if (cartRec) cartRec.style.display = 'flex'

        const itemHtmlPromises = cart.items.map(async (item, index) => {
          let compareAtPrice = null;

          try {
            const productRes = await fetch(`/products/${item.handle}.js`);
            const productData = await productRes.json();

            const matchedVariant = productData.variants.find(v => v.id === item.variant_id);
            if (matchedVariant && matchedVariant.compare_at_price) {
              compareAtPrice = (matchedVariant.compare_at_price).toFixed(2);
            }
          } catch (err) {
            console.warn(`Could not fetch product data for ${item.title}:`, err);
          }

          const hasDiscount = compareAtPrice && compareAtPrice > item.final_line_price;
          let discountPercent = 0;
          if (hasDiscount) {
            discountPercent = Math.round(((compareAtPrice - item.final_line_price) / compareAtPrice) * 100);
          }

          return `
            <div class="cart-item" data-line="${index + 1}">
              <div class="cart-item-left">
                <div class="cart-item-image">
                  <img src="${item.image}" alt="${item.title}" class="cart-image" />
                </div>
                <div class="cart-item-info ${hasDiscount ? 'hasDiscount' : ''}">
                  <p class="cart-item-title">${item.title}</p>
                  ${hasDiscount ? `<p class="cart-discount-percent">${discountPercent}% Off</p>` : ''}
                  <p class="cart-price">
                    ${hasDiscount ? `<span class="cart-compare-price">${formatMoney(compareAtPrice)}</span>` : ''}
                    ${formatMoney(item.final_line_price)}
                  </p>
                </div>
              </div>
              <div class="cart-qty">
                <button class="qty-btn minus" data-line="${index + 1}" data-qty="${item.quantity}">
                  ${item.quantity > 1 ? `{% render 'minus-icon' %}` : `{% render 'bin-icon' %}`}
                </button>
                <span class="qty-count">${item.quantity}</span>
                <button class="qty-btn plus" data-line="${index + 1}" data-qty="${item.quantity}">
                  {% render 'plus-icon' %}
                </button>
              </div>
            </div>
          `;
        });

        const allItemsHTML = await Promise.all(itemHtmlPromises);
        if (cartItemsWrapper) cartItemsWrapper.innerHTML = allItemsHTML.join('');

        // üßæ Update totals and counts
        const subtotal = cart.items_subtotal_price;
        const total = cart.total_price;
        if (subtotalDiv) subtotalDiv.innerHTML = formatMoney(subtotal);
        totalDivs.forEach(div => div.innerHTML = formatMoney(total));

        if (headCount) headCount.textContent = cart.item_count;
        if (cartCountSpan) {
          cartCountSpan.textContent = cart.item_count === 1
            ? `(1 item)`
            : `(${cart.item_count} items)`;
        }

        cartItemsContainer.querySelectorAll('.cart-item').forEach(item => {
          const minusBtn = item.querySelector('.qty-btn.minus');
          const qtyCount = item.querySelector('.qty-count');
          if (Number(qtyCount.textContent) === 1) minusBtn.classList.add('one-item');
        });

        recommendedCart();
        attachQtyHandlers();
        fetchShippingRateByRegion();

      } catch (err) {
        console.error('Error loading cart:', err);
      } finally {
        hideLoader();
      }
    }


    // Update Cart item Quantity and Add new item when a product is already in cart.
    async function updateCartItem(line, quantity) {
      showLoader();

      try {
        const response = await fetch(window.Shopify.routes.root + 'cart/change.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ line, quantity })
        });

        if (!response.ok) throw new Error('Network response was not ok');

        const data = await response.json();
        console.log('Cart updated:', data);

        await loadCartItems(); // Re-render cart after update
        await recommendedCart();
        await fetchShippingRateByRegion();
      } catch (err) {
        console.error('Error updating cart:', err);
      } finally {
        hideLoader();
      }
    }


    // Quantity button handlers
    function attachQtyHandlers() {
      const plusBtns = cartItemsContainer.querySelectorAll('.qty-btn.plus');
      const minusBtns = cartItemsContainer.querySelectorAll('.qty-btn.minus');

      plusBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const line = Number(btn.dataset.line);
          const qtyCount = btn.closest('.cart-item').querySelector('.qty-count');
          const currentQty = Number(qtyCount.textContent);
          updateCartItem(line, currentQty + 1);
        });
      });

      minusBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const line = Number(btn.dataset.line);
          const qtyCount = btn.closest('.cart-item').querySelector('.qty-count');
          const currentQty = Number(qtyCount.textContent);
          const newQty = currentQty > 1 ? currentQty - 1 : 0;
          console.log('New Qty:', newQty);
          if (newQty === 1) {
            btn.classList.add('one-item');
          } else {
            btn.classList.remove('one-item');
          }
          updateCartItem(line, newQty);
        });
      });
    }

    // Show First Shipping option if available. Handled with use case of Not deliverable regions.
    async function fetchShippingRateByRegion() {
      try {
        const failedFlag = localStorage.getItem('shippingRateFailed');
        if (failedFlag === 'true') {
          console.warn('‚ö†Ô∏è Shipping rate fetch previously failed ‚Äî skipping future attempts.');
          return;
        }

        let geoData;

        const cachedGeo = localStorage.getItem('userGeoData');
        if (cachedGeo) {
          geoData = JSON.parse(cachedGeo);
          console.log('Using cached geo data:', geoData);
        } else {
          console.log('Fetching geo data from API...');
          const geoRes = await fetch('https://ipapi.co/json/');
          if (!geoRes.ok) throw new Error('Failed to get IP location data');

          geoData = await geoRes.json();

          localStorage.setItem(
            'userGeoData',
            JSON.stringify({
              country_name: geoData.country_name,
              postal: geoData.postal,
              cachedAt: Date.now(),
            })
          );
        }

        const country = geoData.country_name;
        const zip = geoData.postal || '00000';

        console.log(`üåç Location detected: ${country}, ZIP: ${zip}`);

        const res = await fetch(
          `/cart/shipping_rates.json?shipping_address[country]=${encodeURIComponent(country)}&shipping_address[zip]=${encodeURIComponent(zip)}`
        );

        if (!res.ok) {
          localStorage.setItem('shippingRateFailed', 'true');
          throw new Error(`Shipping rate fetch failed (${res.status})`);
        }

        const data = await res.json();
        const shippingAmountDiv = document.querySelector('.shipping-amount');

        if (data.shipping_rates && data.shipping_rates.length > 0) {
          console.log('Available Shipping Rates:', data.shipping_rates);
          const firstRate = data.shipping_rates[0];
          console.log(`First Rate: ${firstRate.name} - ${firstRate.price} ${firstRate.currency}`);

          if (shippingAmountDiv) {
            shippingAmountDiv.innerHTML = `${formatMoney(firstRate.price)}`;
          }
        } else {
          console.log('No shipping rates available for your region.');
          localStorage.setItem('shippingRateFailed', 'true');
          if (shippingAmountDiv) shippingAmountDiv.innerHTML = 'Shipping Unavailable';
        }

      } catch (error) {
        console.error('Error fetching shipping rates:', error);
        const shippingAmountDiv = document.querySelector('.shipping-amount');
        if (shippingAmountDiv) shippingAmountDiv.innerHTML = 'Shipping Unavailable';

        localStorage.setItem('shippingRateFailed', 'true');
      }
    }


    loadCartItems();
    attachAddToCartListeners();
    // ‚úÖ Expose reinitialization function globally
    window.initializeCartFunction = function () {
      console.log('‚ôªÔ∏è Reinitializing cart functions...');
      loadCartItems();
      attachAddToCartListeners();
    };
  });
</script>


