    border: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: 32px;
    gap: 16px;
  }

  .checkout-btn .checkout-txt {
    font-weight: 500;
    font-size: 14px;
    line-height: 100%;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    color: #2c2c2c;
  }

  .checkout-btn .checkout-total {
    font-weight: 600;
    font-size: 16px;
    line-height: 100%;
    letter-spacing: -0.02em;
    text-align: right;
    vertical-align: middle;
    text-transform: capitalize;
    color: #1A1A1A;
  }

  .cart-recommendation-wrapper {
