<div class="side-cart">
  <div class="cart-loader">
    <div class="loader-spinner"></div>
  </div>
  
  <div class="cart-recommendation-wrapper">
    <div class="cr-head">you may also like</div>
    <div class="cart-recommendation" data-lenis-prevent></div>
  </div>
  <div class="sc-wrapper">
    <div class="sc-head">
      <div class="sch-left">
        <p>
          Cart
          <span id="cart_item_count">({{ cart.item_count }} items)</span>
        </p>
        {% if cart.item_count > 0 %}
          <a href="{{ routes.cart_url }}">View Cart</a>
        {% endif %}
      </div>
      <div class="sc-close">
        {% render 'cross' %}
      </div>
    </div>
    <div
      class="sc-shipping-arrival"
      data-user-language="{{ request.locale.name }}"
      data-user-iso="{{ request.locale.iso_code }}"
      data-user-selected-country={{ localization.country.iso_code | json }}>
      {% render 'shipping-icon' %}
      <p>Arrives
        <span id="arrival-date">Sep 2 - Sep 4</span>
      </p>

      <script>
        document.addEventListener('DOMContentLoaded', async () => {
          try {
            const response = await fetch('/cart.js');
            const cart = await response.json();

            const scriptTag = document.createElement('script');
            scriptTag.id = 'cart-data';
            scriptTag.type = 'application/json';
            scriptTag.textContent = JSON.stringify(cart);
            const cartData = document.querySelector(".sc-shipping-arrival");

            cartData.appendChild(scriptTag);

            console.log('ðŸ›’ Cart data:', cart);
          } catch (error) {
            console.error('Error fetching cart:', error);
          }
        });
      </script>
    </div>
    <div class="sc-in">
      <div class="side-cart-with-items" data-lenis-prevent></div>
    </div>
    <div class="sc-footer">
      {% render 'discount-code-field' %}
      <div class="cart-totals">
        <div class="cart-subtotal">
          <p class="cs-title">Subtotal</p>
          <p class="subtotal-amount cs-res">0.00</p>
        </div>

        <!-- âœ… NEW -->
        <div class="cart-discount" style="display:none;">
          <p class="cs-title">Discount:</p>
          <p class="discount-amount cs-res">-0.00</p>
        </div>

        <div class="cart-shipping">
          <p class="cs-title">Shipping
            <span>(calc. at the checkout)</span>
          </p>
          <p class="shipping-amount cs-res">Calculated at checkout</p>
        </div>

        <div class="cart-total">
          <p class="cs-title">Total <span>incl. VAT</span></p>
          <p class="total-amount cs-res">0.00</p>
        </div>
      </div>
      <form action="/checkout" method="post">
        <button
          name="checkout"
          type="submit"
          class="checkout-btn custom-btn filled"
          style="width: 100%;">
          <span class="checkout-txt">Checkout</span>
          <span class="checkout-total">0.00</span>
        </button>
      </form>
    </div>
  </div>
</div>


<script id="cart_function">

  let lastCartTotal = 0; // Tracks the total to prevent redundant shipping fetches

  document.addEventListener('DOMContentLoaded', function () {
    const sideCart = document.querySelector('.sideCart');
    const cartItemsContainer = document.querySelector('.sc-in');
    const cartItemsWrapper = document.querySelector('.side-cart-with-items');
    const cartIn = document.querySelector('.sc-wrapper');
    const cartFooter = document.querySelector('.sc-footer');
    const body = document.querySelector('body');
    const html = document.querySelector('html');



    function formatMoney(cents) {
      const value = (cents / 100).toFixed(2);
      const symbol = window.currencySymbol || '';
      const code = window.activeCurrency || '';
      return `${symbol}${value} ${code}`;
    }

    document.querySelector('.cart-open')?.addEventListener('click', function () {
      sideCart.classList.add('active');
      body.classList.add('stay');
      html.classList.add('stay');
      loadCartItems();
    });

    document.querySelector('.sc-close')?.addEventListener('click', function () {
      sideCart.classList.remove('active');
      body.classList.remove('stay')
      html.classList.remove('stay')
    });

    const loader = document.querySelector('.cart-loader');

    function showLoader() {
      loader?.classList.add('active');
    }

    function hideLoader() {
      loader?.classList.remove('active');
    }

    const recommendedCart = async (cartData) => {
      const recommendationWrapper = document.querySelector('.cart-recommendation');
      const recommendationIn = document.querySelector('.cart-recommendation-wrapper');
      if (!recommendationIn || !recommendationWrapper) return;

      try {
        const cart = cartData;
        const renderProducts = (products) => {
          if (!products || !products.length) {
            recommendationIn.style.display = 'none';
            return;
          }

          recommendationIn.style.display = 'flex';
          let recommendationsHtml = '';

          products.forEach((product) => {
            const imageSrc = product.featured_image || (product.images && product.images[0]) || '';
            const price = formatMoney(product.price);
            const varId = product.variants && product.variants.length ? product.variants[0].id : '';

            // Restored your EXACT original HTML structure
            recommendationsHtml += `
              <div class="recommended-item">
                <div class="ri-img">
                  <img src="${imageSrc}" alt="${product.title}" class="product-card__image">
                </div>
                <div class="ri-txt">
                  <p class="rit-title">${product.title}</p>
                </div>
                <div class="ri-form">
                  <form action="/cart/add" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="${varId}">
                    <input type="hidden" name="quantity" value="1">
                    <div class="fc_add_to_cart">
                      <span class="remove_product">-</span>
                      <button type="submit" class="add-to-cart">Add to Cart</button>
                      <span class="add_product">+</span>
                    </div>
                  </form>
                </div>
              </div>
            `;
          });

          recommendationWrapper.innerHTML = recommendationsHtml;
          attachAddToCartListeners(recommendationWrapper);
        };

        if (cart && cart.items && cart.items.length > 0) {
          const firstProductId = cart.items[0].product_id;
          const response = await fetch(`/recommendations/products.json?product_id=${firstProductId}&limit=8`);
          const data = await response.json();
          renderProducts(data.products || []);
        } else {
          const fallbackHandle = 'fruit'; 
          const fallbackRes = await fetch(`/collections/${fallbackHandle}/products.json?limit=8`);
          const fallbackData = await fallbackRes.json();
          renderProducts(fallbackData.products || fallbackData);
        }
      } catch (error) {
        console.error('âŒ Recommendation error:', error);
      }
    };


  /// Optimized Global Card Sync Logic
  window.syncAllCardsWithCart = async function(cartData) {
    const cart = cartData || await fetch(window.Shopify.routes.root + 'cart.js').then(r => r.json());
    
    document.querySelectorAll('.product-card-primary').forEach(card => {
      const cardAddToCartWrapper = card.querySelector('.fc_add_to_cart');
      if (!cardAddToCartWrapper) return;

      const variantId = cardAddToCartWrapper.dataset.variantId;
      const cartItem = cart.items.find(item => item.variant_id.toString() === variantId.toString());

      if (cartItem && cartItem.quantity > 0) {
        cardAddToCartWrapper.classList.add('active');
        const qtyValue = cardAddToCartWrapper.querySelector('.qty-value');
        if (qtyValue) qtyValue.innerText = cartItem.quantity;
      } else {
        // Revert UI to 'Add to Cart' state
        cardAddToCartWrapper.classList.remove('active');
        
        const btn = cardAddToCartWrapper.querySelector('.add-to-cart-btn');
        if (btn) {
          btn.innerText = 'Add to Cart';
          btn.disabled = false;
        }
        
        const qtyValue = cardAddToCartWrapper.querySelector('.qty-value');
        if (qtyValue) qtyValue.innerText = '1';
      }
    });
  };



    function attachAddToCartListeners(scope = document) {
      // Find all forms that add to cart (use ends-with action for safety)
      scope.querySelectorAll('form[action$="/cart/add"]').forEach(form => {
        // Prevent adding multiple listeners to same form
        if (form.dataset.listenerAttached === 'true') return;
        form.dataset.listenerAttached = 'true';

        // Prefer a custom button class, fallback to any submit button
        const addToCartBtn = form.querySelector('.add-to-cart-btn') || form.querySelector('button[type="submit"]');

        if (!addToCartBtn) return;

        addToCartBtn.addEventListener('click', async (e) => {
          // Prevent native form submit so we control requests
          e.preventDefault();

          // Guard against duplicates
          if (form.dataset.submitting === 'true') return;
          form.dataset.submitting = 'true';
          showLoader();

          try {
            const formData = new FormData(form);

            // If button has data-variant-id and input id is missing, ensure it exists
            const btnVariantId = addToCartBtn.dataset.variantId;
            if (btnVariantId && !form.querySelector('input[name="id"]')) {
              formData.set('id', btnVariantId);
            }

            const response = await fetch(window.Shopify.routes.root + 'cart/add.js', {
              method: 'POST',
              body: formData
            });

            if (!response.ok) throw new Error('Network response was not ok');

            const data = await response.json();
            console.log('Added to cart:', data);

            // Open side cart and re-render
            sideCart.classList.add('active');
            await loadCartItems();
            await fetchShippingRateByRegion();
            await recommendedCart();
          } catch (err) {
            console.error('Error adding to cart:', err);
          } finally {
            form.dataset.submitting = 'false';
            hideLoader();
          }
        });
      });
    }

        document.addEventListener('cart:updated', async (e) => {
  const cart = e.detail;

  // ðŸ” Always re-render totals from ONE place
  await loadCartItems();

  // ðŸ” Sync all discount pills everywhere
  document.querySelectorAll('discount-field')
    .forEach(df => df.updateFromCart(cart));
});

  
    (function () {
      // Capture submits early
      document.addEventListener('submit', function (e) {
        const form = e.target;
        if (!form || form.getAttribute('action') !== '/cart/add') return;

        // if already submitting, stop duplicate
        if (form.dataset.submitting === 'true') {
          e.preventDefault();
          return;
        }

        form.dataset.submitting = 'true';

        // Re-enable after a short safe timeout
        setTimeout(() => {
          form.dataset.submitting = 'false';
        }, 3000);
      }, true);
    })();


    function getDiscountCodesFromCart(cart) {
      const codes = [];

      // Cart-level discounts
      if (cart.cart_level_discount_applications?.length) {
        cart.cart_level_discount_applications.forEach(d => {
          if (d.type === 'discount_code') {
            codes.push(d.title);
          }
        });
      }

      // Line-level discounts
      cart.items.forEach(item => {
        item.line_level_discount_allocations.forEach(allocation => {
          if (allocation.discount_application.type === 'discount_code') {
            codes.push(allocation.discount_application.title);
          }
        });
      });

  return [...new Set(codes)];
}



    // Load and Render Cart Items
    window.loadCartItems = async function() {
      showLoader();
      try {
        // Force fresh data from Shopify
        const res = await fetch(`${window.Shopify.routes.root}cart.js?v=${new Date().getTime()}`);
        const cart = await res.json();
        
        // Sync the UI
        if (window.syncAllCardsWithCart) window.syncAllCardsWithCart(cart);
        
        // ðŸ” Sync discount pills whenever cart loads
        document.querySelectorAll('discount-field')
          .forEach(df => df.updateFromCart(cart));
        console.log('Cart Data:', cart);

        if (!cartItemsContainer) return;

        const subtotalDiv = document.querySelector('.subtotal-amount');
        const shippingAmountDiv = document.querySelector('.shipping-amount');
        const totalDivs = document.querySelectorAll('.total-amount, .checkout-total');
        const cartCountSpan = document.getElementById('cart_item_count');
        const headCount = document.querySelector('.header__cart-quantity');

        // ðŸ§¹ Hide/Show wrappers properly
        if (cart.items.length === 0) {
          // Show empty cart
          cartItemsContainer.innerHTML = `
            <div class="side-cart-empty">
              <div class="jf-icon">{% render 'jf' %}</div>
              <div class="sce-txt">
                <h3>uh-oh!</h3>
                <p>You have an empty basket.</p>
              </div>
            </div>
          `;

          if (cartItemsWrapper) cartItemsWrapper.style.display = 'none';
          if (cartFooter) cartFooter.style.display = 'none';

          // keep recommendation wrapper visible, content is handled by recommendedCart()
          const cartRecWrapper = document.querySelector('.cart-recommendation-wrapper');
          if (cartRecWrapper) cartRecWrapper.style.display = 'flex';
          if (cartCountSpan) cartCountSpan.textContent = `(0 item)`;
          if (headCount) headCount.textContent = '0';

          // ensure fallback recommendations for empty cart
          recommendedCart(cart);
          return;
        }

        // âœ… If cart has items, make sure both sections are visible
        if (cartItemsWrapper) {
          cartItemsWrapper.style.display = 'block';
        }
        if (cartFooter) cartFooter.style.display = 'block';

        const emptyDiv = cartItemsContainer.querySelector('.side-cart-empty');
        if (emptyDiv) {
          emptyDiv.remove();
          cartItemsContainer.appendChild(cartItemsWrapper);
        }
        const cartRec = document.querySelector('.cart-recommendation');
        if (cartRec) cartRec.style.display = 'flex'

        // Replace the old itemHtmlPromises block with this:
        const itemHtmlPromises = cart.items.map(async (item, index) => {
          // We avoid fetching /products/${item.handle}.js here to prevent 429 errors.
          // Shopify's cart.js already provides 'original_line_price' and 'final_line_price'.
          
          const hasDiscount = item.original_line_price > item.final_line_price;
          let discountPercent = 0;
          if (hasDiscount) {
            discountPercent = Math.round(((item.original_line_price - item.final_line_price) / item.original_line_price) * 100);
          }

          return `
            <div class="cart-item" data-line="${index + 1}" data-key="${item.key}">
              <div class="cart-item-left">
                <div class="cart-item-image">
                  <a href="${item.url}">
                    <img src="${item.image}" alt="${item.product_title}" class="cart-image" />
                  </a>
                </div>
                <div class="cart-item-info">
                  <a href="${item.url}">
                    <p class="cart-item-title">${item.product_title}</p>
                  </a>
                  <p class="cart-price">${formatMoney(item.final_line_price)}</p>
                  ${hasDiscount ? `<span class="cart-discount-label">${discountPercent}% Off</span>` : ''}
                </div>
              </div>
              <div class="cart-qty">
                <button class="qty-btn minus" data-line="${index + 1}" data-key="${item.key}" data-qty="${item.quantity}">
                  ${item.quantity > 1 ? `{% render 'minus-icon' %}` : `{% render 'bin-icon' %}`}
                </button>
                <span class="qty-count">${item.quantity}</span>
                <button class="qty-btn plus" data-line="${index + 1}" data-key="${item.key}" data-qty="${item.quantity}">
                  {% render 'plus-icon' %}
                </button>
              </div>
            </div>
          `;
        });

        const allItemsHTML = await Promise.all(itemHtmlPromises);
        if (cartItemsWrapper) cartItemsWrapper.innerHTML = allItemsHTML.join('');
        attachQtyHandlers();

        // ðŸ§¾ Update totals and counts
        let originalSubtotal = 0;

        cart.items.forEach(item => {
          originalSubtotal += item.original_line_price;
        });

        const discountedSubtotal = cart.items_subtotal_price;
        const total = cart.total_price;
        const discountAmount = originalSubtotal - discountedSubtotal;

        const discountRow = document.querySelector('.cart-discount');
        const discountDiv = document.querySelector('.discount-amount');


        // Subtotal (always original)
        if (subtotalDiv) {
          subtotalDiv.innerHTML = formatMoney(originalSubtotal);
        }

        // Horizon-style discount detection
        const discountCodes = getDiscountCodesFromCart(cart);

        if (discountCodes.length > 0 && discountAmount > 0) {
          discountRow.style.display = 'flex';
          discountDiv.innerHTML = `- ${formatMoney(discountAmount)}`;
        } else {
          discountRow.style.display = 'none';
        } 


        // Total (final payable)
        document.querySelectorAll('.total-amount, .checkout-total')
          .forEach(el => el.innerHTML = formatMoney(total));

        if (headCount) headCount.textContent = cart.item_count;
        if (cartCountSpan) {
          cartCountSpan.textContent = cart.item_count === 1
            ? `(1 item)`
            : `(${cart.item_count} items)`;
        }

        cartItemsContainer.querySelectorAll('.cart-item').forEach(item => {
          const minusBtn = item.querySelector('.qty-btn.minus');
          const qtyCount = item.querySelector('.qty-count');
          if (Number(qtyCount.textContent) === 1) minusBtn.classList.add('one-item');
        });

        recommendedCart(cart);
        attachQtyHandlers();
        if (cart.total_price !== lastCartTotal) {
            fetchShippingRateByRegion();
            lastCartTotal = cart.total_price;
        }

      } catch (err) {
        console.error('Error loading cart:', err);
      } finally {
        hideLoader();
      }
    }

    window.resetCardUI = function(variantId) {
    // Find the specific card for this variant
    const cardContainer = document.querySelector(`.fc_add_to_cart[data-variant-id="${variantId}"]`);
    
    if (cardContainer) {
      // 1. Remove the 'active' class to show the 'Add to Cart' button instead of +/-
      cardContainer.classList.remove('active');
      
      // 2. Find the button inside and reset its text/disabled state
      const btn = cardContainer.querySelector('.add-to-cart-btn');
      if (btn) {
        btn.innerText = 'Add to Cart';
        btn.disabled = false;
      }
      
      // 3. Reset the internal quantity number back to 1
      const qtyValue = cardContainer.querySelector('.qty-value');
      if (qtyValue) qtyValue.innerText = '1';
    }
  };


    // Global Update Function
    // --- Update this in your Side Cart script ---
    window.updateCartItem = async function(key, quantity, variantId) {
      showLoader();
      try {
        const response = await fetch(window.Shopify.routes.root + 'cart/change.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: key, quantity: quantity }) // Using 'key' instead of 'line'
        });

        const updatedCart = await response.json();
        
        // Refresh both Side Cart and Product Card UI
        await loadCartItems(); 
        if (window.syncAllCardsWithCart) {
          window.syncAllCardsWithCart(updatedCart);
        }

        // Tell the Cart Page to refresh
        document.dispatchEvent(new CustomEvent('cart:updated', { detail: updatedCart }));

      } catch (err) {
        console.error('Removal failed:', err);
      } finally {
        // Force unblock all buttons and clear "Adding..."
        document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
          btn.disabled = false;
          if (btn.innerText === 'ADDING...') btn.innerText = 'Add to Cart';
        });
        hideLoader();
      }
    };


    // Quantity button handlers
    function attachQtyHandlers() {
      const plusBtns = cartItemsContainer.querySelectorAll('.qty-btn.plus');
      const minusBtns = cartItemsContainer.querySelectorAll('.qty-btn.minus');

      minusBtns.forEach(btn => {
        btn.onclick = async (e) => { // Use onclick to prevent multiple listeners
          const key = btn.dataset.key;
          const currentQty = Number(btn.dataset.qty);
          const variantId = btn.dataset.variantId;
          const newQty = currentQty > 1 ? currentQty - 1 : 0;
          await window.updateCartItem(key, newQty, variantId);
        };
      });

      plusBtns.forEach(btn => {
        btn.onclick = async (e) => {
          const key = btn.dataset.key; // Fixed: using key instead of line
          const currentQty = Number(btn.dataset.qty);
          const variantId = btn.dataset.variantId;
          await window.updateCartItem(key, currentQty + 1, variantId);
        };
      });
    }

    // Show First Shipping option if available. Handled with use case of Not deliverable regions.
    async function fetchShippingRateByRegion() {
      try {
        const failedFlag = localStorage.getItem('shippingRateFailed');
        if (failedFlag === 'true') {
          console.warn('âš ï¸ Shipping rate fetch previously failed â€” skipping future attempts.');
          return;
        }

        let geoData;

        const cachedGeo = localStorage.getItem('userGeoData');
        if (cachedGeo) {
          geoData = JSON.parse(cachedGeo);
          console.log('Using cached geo data:', geoData);
        } else {
          console.log('Fetching geo data from API...');
          const geoRes = await fetch('https://ipapi.co/json/');
          if (!geoRes.ok) throw new Error('Failed to get IP location data');

          geoData = await geoRes.json();

          localStorage.setItem(
            'userGeoData',
            JSON.stringify({
              country_name: geoData.country_name,
              postal: geoData.postal,
              cachedAt: Date.now(),
            })
          );
        }

        const country = geoData.country_name;
        const zip = geoData.postal || '00000';

        console.log(`ðŸŒ Location detected: ${country}, ZIP: ${zip}`);

        const res = await fetch(
          `/cart/shipping_rates.json?shipping_address[country]=${encodeURIComponent(country)}&shipping_address[zip]=${encodeURIComponent(zip)}`
        );

        if (!res.ok) {
          localStorage.setItem('shippingRateFailed', 'true');
          throw new Error(`Shipping rate fetch failed (${res.status})`);
        }

        const data = await res.json();
        const shippingAmountDiv = document.querySelector('.shipping-amount');

        if (data.shipping_rates && data.shipping_rates.length > 0) {
          console.log('Available Shipping Rates:', data.shipping_rates);
          const firstRate = data.shipping_rates[0];
          console.log(`First Rate: ${firstRate.name} - ${firstRate.price} ${firstRate.currency}`);

          if (shippingAmountDiv) {
            shippingAmountDiv.innerHTML = `${formatMoney(firstRate.price)}`;
          }
        } else {
          console.log('No shipping rates available for your region.');
          localStorage.setItem('shippingRateFailed', 'true');
          if (shippingAmountDiv) shippingAmountDiv.innerHTML = 'Shipping Unavailable';
        }

      } catch (error) {
        console.error('Error fetching shipping rates:', error);
        const shippingAmountDiv = document.querySelector('.shipping-amount');
        if (shippingAmountDiv) shippingAmountDiv.innerHTML = 'Shipping Unavailable';

        localStorage.setItem('shippingRateFailed', 'true');
      }
    }


    loadCartItems();
    attachAddToCartListeners();
    
    
    // âœ… Expose reinitialization function globally
    window.initializeCartFunction = async function (cartData) {
      const cart = cartData || await fetch('/cart.js').then(r => r.json());

      loadCartItems();
      attachAddToCartListeners();

      document.querySelectorAll('discount-field')
        .forEach(df => df.updateFromCart(cart));
    };

    window.initializeCartFunction();

  });
</script>


