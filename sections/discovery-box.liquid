<section class="dis-box">
    <div class="db-bg">
        <img src="{{ section.settings.bg-image |img_url: 'master' }}" alt="">
    </div>
    <div class="container">
        <div class="db-in">
            <div class="bdi-left">
                <div class="bdil-top">
                    <div class="heading left white">
                        <h2 class="small" data-aos="fade-up" data-aos-duration="1000">{{ section.settings.heading }}</h2>
                        <p class="big" data-aos="fade-up" data-aos-duration="1000">{{ section.settings.para }}</p>
                    </div>
                </div>
                <div class="bdil-bottom">
                    <div class="bd-testimonial-wrap">
                        <div class="db-tw-image">
                            <img src="{{ section.settings['user_image'] | img_url: 'master' }}" alt="User Image" class="img">
                        </div>
                        <div class="db-tw-review">
                            {% render 'rating-stars-fa', rating: section.settings.review_star %}
                            <div class="rating-text" aria-hidden="true">{{ section.settings.review_star }}</div>
                        </div>
                        <div class="db-tw-user">
                            <p>{{ section.settings.user_name }}</p>
                        </div>
                        <div class="db-tw-content">
                            <p>{{ section.settings.user_comment }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bdi-right">
                <div class="dbir-box-wrap">
                    <div class="dbir-box">
                        <div class="fruits_card fruit_box">
                            <div class="fc_top">
                                <div class="fc_image">
                                    <img src="https://cdn.shopify.com/s/files/1/0752/8015/4881/files/fruits-image.jpg?v=1758888846" alt="Image" class="img_sizing">
                                </div>
                                <div class="fc_bestsell_tags">
                                    <span>Best Seller</span>
                                </div>
                                <div class="fc_organic_auth">
                                    <img src="https://cdn.shopify.com/s/files/1/0752/8015/4881/files/organic_auth.png?v=1758889316" alt="Image"
                                        class="img_sizing">
                                </div>
                            </div>
                            <div class="fc_bottom">
                                <div class="star_review">
                                    <div class="star_rating">
                                        <img src="https://cdn.shopify.com/s/files/1/0752/8015/4881/files/star-rating.png?v=1759215596"
                                            alt="Star Rating">
                                    </div>
                                    <div class="rating_info">
                                        <p>4.9 (200)</p>
                                        
                                    </div>
                                </div>
                                <p class="fc_product_title">discovery Box</p>
                                <div class="fc_variant_wrap">
                                    <div class="fc_variant_item">
                                        <p>500 G <span>4% Off</span></p>
                                        <p class="quantity">2 Pieces</p>
                                    </div>
                                    <div class="fc_variant_item">
                                        <p>1 KG <span>4% Off</span></p>
                                        <p class="quantity">4 Pieces</p>
                                    </div>
                                    <div class="fc_variant_item active best_seller">
                                        <p>2 KG <span>4% Off</span></p>
                                        <p class="quantity">4 Pieces</p>
                                    </div>
                                </div>
                                <div class="fc_price_weight">
                                    <p><strike>$350.00</strike> <span class="selling_price">$300.00</span></p>
                                    <p class="fc_weight">$600/Kg</p>
                                </div>
                                <div class="fc_add_to_cart_outer">
                                    <div class="fc_add_to_cart">
                                        <span class="remove_product">
                                            <svg width="23" height="22" viewBox="0 0 23 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M5.09961 11.3408H17.8457" stroke="#151515" stroke-width="1.82087"
                                                    stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>
                                        </span>
                                        <button>Add to Cart</button>
                                        <span class="add_product">
                                            <svg width="23" height="22" viewBox="0 0 23 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M11.5645 4.96582V17.7119" stroke="#151515" stroke-width="1.82087"
                                                    stroke-linecap="round" stroke-linejoin="round" />
                                                <path d="M5.19727 11.3408H17.9434" stroke="#151515" stroke-width="1.82087"
                                                    stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>
                                        </span>
                                    </div>
                                </div>
                                <div class="fc_trust_text">
                                    <p>Only 3 Left</p>
                                    <span class="dot_seperator"></span>
                                    <p>Free Returns</p>
                                    <span class="dot_seperator"></span>
                                    <p>Product Benefit</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{% schema %}
{
  "name": "Discovery Box",
  "class": "discovery-box",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg-image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text"
    },
    {
      "type": "text",
      "id": "para",
      "label": "Paragraph Text"
    },
    {
        "type": "image_picker",
        "id": "user_image",
        "label": "User Image"
    },
    {
        "type": "range",
        "id": "review_star",
        "min": 0,
        "max": 5,
        "step": 0.1,
        "label": "Star Ratings",
        "default": 4.5
    },
    {
        "type": "text",
        "id": "user_name",
        "label": "User Name"
    },
    {
        "type": "text",
        "id": "user_comment",
        "label": "Testimonial Content"
    },
  ]
}
{% endschema %}