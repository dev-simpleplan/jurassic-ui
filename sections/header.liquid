<header>
  <div class="container">
    <div class="desktop-header">
      <div class="header-in">
        <div class="h-left">
          <div class="brand-logo mob-none flex">
            <a href="{{ shop.url }}">
              {% if section.settings.select_logo %}
                <img
                  src="{{ section.settings.select_logo | image_url }}"
                  alt="{{ shop.name | escape }}"
                  class="icon">
              {% else %}
                {{ shop.name }}
              {% endif %}
            </a>
          </div>
        </div>

        <div class="h-nav">

          <div class="hnav-menu">
            <ul>
              <li class="nav-item no-mega-menu">
                <a href="" class="nav-link">New Arrivals</a>
              </li>
              <li class="nav-item has-mega-menu">
                <div class="arrow">
                  <a href="" class="nav-link">Shop All</a>
                  <span class="nav_arrow_down">{% render 'icon-arrow_down' %}</span>
                </div>
                <div class="mega-menu">
                  <div class="container">
                    <div class="mega-menu-split">

                    </div>
                  </div>
                </div>
              </li>
              <li class="nav-item has-mega-menu">
                <div class="arrow">
                  <a href="" class="nav-link">Boxes</a>
                  <span class="nav_arrow_down">{% render 'icon-arrow_down' %}</span>
                </div>
                <div class="mega-menu">
                  <div class="container">
                    <div class="mega-menu-split">
                      
                    </div>
                  </div>
                </div>
              </li>
              <li class="nav-item no-mega-menu">
                <a href="" class="nav-link">Buy Again</a>
              </li>
              <li class="nav-item has-mega-menu">
                <div class="arrow">
                  <a href="" class="nav-link">Learn More</a>
                  <span class="nav_arrow_down">{% render 'icon-arrow_down' %}</span>
                </div>
                <div class="mega-menu">
                  <div class="container">
                    <div class="mega-menu-split">
                      
                    </div>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>

        <div class="h-right">
          <div class="header-icons-wrap flex">
            <a href="#" class="search">{% render 'icon-search' %}</a>
            {% if customer %}
              <a href="{{ routes.account_url }}" class="cust-login">{% render 'icon-profile' %}</a>
            {% else %}
              <a href="{{ routes.account_login_url }}" class="profile">{% render 'icon-profile' %}</a>
            {% endif %}
            <div class="cart">
              <a href="javascript:void(0)" class="cart-open">
                {% render 'icon-cart' %}
              </a>
              {% if cart.item_count > 0 %}
                <span data-ajax-cart-bind="item_count" class="header__cart-quantity">{{ cart.item_count }}</span>
              {% endif %}
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "select_logo",
      "label": "Change Logo"
    }
  ],
  "blocks": [
    {
      "type": "nav_menu_left",
      "name": "Nav Menu Left",
      "settings": [
        {
          "type": "link_list",
          "id": "nav_items_left",
          "label": "Nav Items"
        },
        {
          "type": "image_picker",
          "id": "mega_menu_img_left",
          "label": "Mega Menu Image Left"
        }
      ]
    },
    {
      "type": "nav_menu_right",
      "name": "Nav Menu Right",
      "settings": [
        {
          "type": "link_list",
          "id": "nav_items_right",
          "label": "Nav Items"
        },
        {
          "type": "image_picker",
          "id": "mega_menu_img_right",
          "label": "Mega Menu Image Right"
        }
      ]
    }
  ],
  "presets": [
    { "name": "Header" }
  ]
}
{% endschema %}

