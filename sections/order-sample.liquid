<div class="order-smaple">
    <div class="os-left-image">
        <img width="100%" height="100%" src="{{ section.settings.first_image | img_url:'master' }}" alt="{{ section.settings.first_image.alt }}">
    </div>
    <div class="os-right-image">
        <img width="100%" height="100%" src="{{ section.settings.second_image | img_url:'master' }}" alt="{{ section.settings.second_image.alt }}">
    </div>
    <div class="container">
        <div class="os-in">
            <div class="heading center small-width">
                <h2 data-aos="fade-up" data-aos-duration="1000">{{ section.settings.heading }}</h2>
                <p class="small" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="50">{{ section.settings.para }}</p>
                <div class="heading-btn">
                    <a href="{{ section.settings.cta_url }}" class="custom-btn black">{{ section.settings.cta_text }}</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
  {
    "name": "order-sample",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Section Heading"
        },
        {
            "type": "text",
            "id": "para",
            "label": "Section Description"
        },
        {
            "type": "url",
            "id": "cta_url",
            "label": "CTA URL"
            },
        {
            "type": "text",
            "id": "cta_text",
            "label": "CTA text",
            "default": "Order Sampler"
        },
        {
            "type": "image_picker",
            "id": "first_image",
            "label": "Select First Image"
        },
        {
            "type": "image_picker",
            "id": "second_image",
            "label": "Select Second Image"
        }
    ],
    "presets": [
      {
        "name": "order-sample",
        "settings": {
        }
      }
    ]
  }
{% endschema %}