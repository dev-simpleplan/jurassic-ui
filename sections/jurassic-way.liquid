<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<section class="jurassic-way">
    <div class="jw-head">
        <div class="jw-in">
            <div class="heading left small">
                <h2>{{ section.settings.section_heading }}</h2>
            </div>
        </div>
    </div>
    <div class="jw-carousel">
        {% for block in section.blocks %}
            <div class="item" data-title="{{ block.settings.slide_heading }}">
                <div class="jw-owl-item">
                    <div class="jwowl-grid">
                        <div class="jwowlgrid-text">
                            <h4>{{ block.settings.slide_heading }}</h4>
                            <p>{{ block.settings.slide_content }}</p>
                        </div>
                        <div class="jwowlgrid-image">
                            <div class="jwgid-imagebox">
                                <img width="100%" height="100%" src="{{ block.settings.slide_image | img_url:'master' }}" alt="{{ block.settings.slide_image.alt }}">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>

{% comment %} <script>
    $('.jw-carousel').slick({
        vertical: true,
        verticalSwiping: true,
        slidesToShow: 1,
        slidesToScroll: 1,
        dots: true
    });
</script> {% endcomment %}

<script>
(function($){
  $(function(){
    var $carousel = $('.jurassic-way .jw-carousel');
        $carousel.slick({
            vertical: true,
            verticalSwiping: true,
            slidesToShow: 1,
            slidesToScroll: 1,
            dots: true,
            arrows: true,
            infinite: false,
            adaptiveHeight: true,
            customPaging: function(slick, index) {
                var $slide = $(slick.$slides[index]);
                var title = $slide.data('title') || ('Slide ' + (index + 1));
                return '<button type="button" class="slick-dot-btn">' + title + '</button>';
            },
            responsive: [
                {
                breakpoint: 991,
                settings: {
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    infinite: true,
                    dots: true,
                    vertical: false,
                    verticalSwiping: false
                }
                }
            ]
        });
  });
})(jQuery);
</script>


{% schema %}
  {
    "name": "jurassic-way",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "section_heading",
            "label": "Section Heading",
            "default": "Fruit Grown, the Jurassic Way"
        }
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "slide_image",
                    "label": "Slide Image"
                },
                {
                    "type": "text",
                    "id": "slide_heading",
                    "label": "Slide Heading"
                },
                { 
                    "type": "text",
                    "id": "slide_content", 
                    "label": "Slide Content"
                },
            ]
        }
    ],
    "presets": [
      {
        "name": "jurassic-way",
        "settings": {
        }
      }
    ]
  }
{% endschema %}