<section class="jurassic-way">
    <div class="jw-head">
        <div class="container-fluid">
            <div class="jw-in">
                <div class="heading left small">
                    <h2>{{ section.settings.section_heading }}</h2>
                </div>
                <div class="jw-links">
                    {% for block in section.blocks %}
                        <div class="jwlink-item" href="#{{ block.settings.slide_heading | replace: ' ', '' | downcase }}">
                            {{ block.settings.slide_heading }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="jw-carousel">
        {% comment %} <div class="slick"> {% endcomment %}
            {% for block in section.blocks %}
                <div class="item">
                    <div class="jw-owl-item">
                        <div class="jwowl-grid">
                            <div class="jwowlgrid-text">
                                <h4>{{ block.settings.slide_heading }}</h4>
                                <p>{{ block.settings.slide_content }}</p>
                            </div>
                            <div class="jwowlgrid-image">
                                <div class="jwgid-imagebox">
                                    <img width="100%" height="100%" src="{{ block.settings.slide_image | img_url:'master' }}" alt="{{ block.settings.slide_image.alt }}">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% comment %} </div> {% endcomment %}
    </div>
</section>

{% schema %}
  {
    "name": "jurassic-way",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "section_heading",
            "label": "Section Heading",
            "default": "Fruit Grown, the Jurassic Way"
        }
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "slide_image",
                    "label": "Slide Image"
                },
                {
                    "type": "text",
                    "id": "slide_heading",
                    "label": "Slide Heading"
                },
                { 
                    "type": "text",
                    "id": "slide_content", 
                    "label": "Slide Content"
                },
            ]
        }
    ],
    "presets": [
      {
        "name": "jurassic-way",
        "settings": {
        }
      }
    ]
  }
{% endschema %}