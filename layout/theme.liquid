    <script>
        document.addEventListener("DOMContentLoaded", (event) => {
          setTimeout(() => {
      const lenis = new Lenis({
        duration: 1.2,
        easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t))
      });

      function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }
      requestAnimationFrame(raf);

      // Header Scroll Backdrop
      let removeTimer;
      let allowHover = true;
      const header = document.querySelector('header');

      lenis.on('scroll', ({ scroll, limit }) => {
        const scrollPercentage = (scroll / limit) * 100;
        allowHover = scrollPercentage <= 5;

        // header backdrop logic
        if (scrollPercentage > 5) {
          header.classList.add('backdrop');
          // force-close menu if you scrolled past 5%
          clearTimeout(removeTimer);
        } else {
          header.classList.remove('backdrop');
        }
      });

          }, 0);

          if (window.gsap && window.ScrollTrigger) {
      gsap.registerPlugin(ScrollTrigger);
      const mm = gsap.matchMedia();

      mm.add("(min-width: 993px)", () => {
        const sideScrollSection = document.querySelector(".scroll-sec");
        const container = document.querySelector(".scrollsec-wrapper");
        if (!sideScrollSection || !container) return;

        const getLen = () => container.scrollWidth - sideScrollSection.clientWidth;

        const tween = gsap.to(container, {
          x: () => -getLen(),
          ease: "none",
          scrollTrigger: {
            trigger: sideScrollSection,
            start: "top top",
            end: () => `+=${getLen()}`,
            scrub: true,
            pin: true,
            pinSpacer: false,
            anticipatePin: 1
          }
        });

        window.addEventListener("resize", ScrollTrigger.refresh);

        return () => {
          window.removeEventListener("resize", ScrollTrigger.refresh);
          tween.kill();
        };
      });
          }

          if (window.gsap && window.ScrollTrigger) {
      gsap.registerPlugin(ScrollTrigger);
      const mm = gsap.matchMedia();

      mm.add("(min-width: 993px)", () => {
        const imageText = document.querySelector(".image-text-scroll");
        if (!imageText) return;

        gsap.set(
          ["#image1", "#image2", "#image3", ".dt-in.one", ".dt-in.two", ".dt-in.three", ".dt-in.four"],
          { opacity: 0 }
        );

        const tl = gsap.timeline({
          scrollTrigger: {
            trigger: imageText,
            start: "top top",
            end: "+=300%",
            pin: true,
            scrub: 1,
            snap: {
              snapTo: "labels",
              duration: { min: 0.2, max: 0.5 },
              delay: 0.5,
              ease: "none"
            }
          }
        });

        tl.addLabel("step1")
          .to("#image1", { opacity: 1, duration: 0.8 })
          .addLabel("step2")
          .to(".dt-in.one", { opacity: 1, duration: 0.8 })
          .addLabel("step3")
          .to("#image3", { opacity: 1, duration: 0.8 })
          .addLabel("step4")
          .to(".dt-in.three", { opacity: 1, duration: 0.8 })
          .addLabel("step5")
          .to("#image2", { opacity: 1, duration: 0.8 })
          .addLabel("step6")
          .to(".dt-in.two", { opacity: 1, duration: 0.8 })
          .addLabel("step7")
          .to(".dt-in.four", { opacity: 1, duration: 0.8 });

        window.addEventListener("resize", ScrollTrigger.refresh);

        return () => {
          window.removeEventListener("resize", ScrollTrigger.refresh);
          tl.scrollTrigger && tl.scrollTrigger.kill();
          tl.kill();
        };
      });
          }
        }); /* ‚Üê missing closer added here */
