      function openNav() {
        document.getElementById("mySidenav").classList.toggle("active");
        document.body.classList.toggle("stay");
        document.querySelector(".navbar_toggler")?.classList.toggle("open");
      }

      var $cmenu = $('.hnav-menu');
        $cmenu.find('.has-mega-menu > .arrow').on('click', function(e) {
          e.preventDefault();
          if($(this).next('.mega-menu').is(':visible')) {
              $(this).removeClass('active');
              $(this).next('.mega-menu').slideUp();
          } else {
              $cmenu.find('.has-mega-menu > .arrow').removeClass('active');
              $(this).addClass('active');
              $cmenu.find('.has-mega-menu > .arrow').next('.mega-menu').slideUp();
              $(this).next('.mega-menu').slideToggle();
          }
        });

