<a href="{{ product.url }}">
  <div class="fruits_card">
    <div class="fc_top">
      {% comment %} Fixed: Use product parameter passed from render {% endcomment %}
      {% if product.featured_image %}
        <div class="fc_image">
          <img
            src="{{ product.featured_image | img_url: 'master' }}"
            alt="{{ product.featured_image.alt | escape }}"
            class="img_sizing"
          >
        </div>
      {% else %}
        <div class="fc_image">
          <img
            src="{{ 'placeholder-image.jpg' | asset_url }}"
            alt="No Image Available"
            class="img_sizing"
          >
        </div>
      {% endif %}

      {% if product.tags contains 'untreated' or product.tags contains 'organic' %}
        <div class="fc_category_tags">
          {% if product.tags contains 'untreated' -%}
            <span>Untreated</span>
          {%- endif %}
          {% if product.tags contains 'seasonal' -%}
            <span>Season</span>
          {%- endif %}
        </div>
      {% endif %}

      {% if product.tags contains 'bestseller' %}
        <div class="fc_bestsell_tags">
          <span>Best Seller</span>
        </div>
      {% endif %}

      <div class="fc_organic_auth" style="{% unless product.tags contains 'organic' %}display: none;{% endunless %}">
        <img src="{{ 'organic_auth.png' | asset_url }}" alt="Organic Certified" class="img_sizing">
      </div>
    </div>

    <div class="fc_bottom">
      <!-- Rest of your card content remains the same -->
      <div class="star_review">
        <div class="star_rating">
          <img src="{{ 'star-rating.png' | asset_url }}" alt="Star Rating">
        </div>
        <div class="rating_info">
          <p>
            {{ product.metafields.custom.rating | default: '4.9' }} (
            {{- product.metafields.custom.reviews_count | default: '200' -}}
            )
          </p>
          <span class="dot_seperator"></span>
          <p>{{ product.vendor | default: 'North America' }}</p>
        </div>
      </div>

      <p class="fc_product_title">{{ product.title | truncate: 50 }}</p>

      <div class="fc_variant_wrap">
        {% for variant in product.variants limit: 3 %}
          <div class="fc_variant_item {% if forloop.first %}active best_seller{% elsif forloop.index == 2 %}best_seller{% endif %}">
            <p>
              {{ variant.title }}
              {% if variant.compare_at_price > variant.price %}
                <span>
                  {{-
                    variant.compare_at_price
                    | minus: variant.price
                    | times: 100
                    | divided_by: variant.compare_at_price
                  -}}
                  % Off</span
                >
              {% endif %}
            </p>
            <p class="quantity">{{ variant.option1 | default: '1 Piece' }}</p>
          </div>
        {% else %}
          <div class="fc_variant_item active">
            <p>Default Variant</p>
            <p class="quantity">1 Piece</p>
          </div>
        {% endfor %}
      </div>

      <div class="fc_price_weight">
        {% assign current_variant = product.selected_or_first_available_variant %}
        {% if current_variant.compare_at_price > current_variant.price %}
          <p>
            <strike>{{ current_variant.compare_at_price | money }}</strike>
            <span class="selling_price">{{ current_variant.price | money }}</span>
          </p>
        {% else %}
          <p>
            <span class="selling_price">{{ current_variant.price | money }}</span>
          </p>
        {% endif %}
        <p class="fc_weight">{{ product.metafields.custom.unit_price | default: '$700/Kg' }}</p>
      </div>

      <div class="fc_add_to_cart_outer">
        <form action="/cart/add" method="post" enctype="multipart/form-data">
          <input type="hidden" name="id" value="{{ current_variant.id }}">
          <input type="hidden" name="quantity" value="1">
          <div class="fc_add_to_cart">
            <span class="remove_product">
              <!-- SVG content -->
            </span>
            <button
              type="submit"
              {% unless product.available %}
                disabled
              {% endunless %}
            >
              {% if product.available %}Add to Cart{% else %}Sold Out{% endif %}
            </button>
            <span class="add_product">
              <!-- SVG content -->
            </span>
          </div>
        </form>
      </div>

      <div class="fc_trust_text">
        <p>{{ current_variant.inventory_quantity | default: 3 }} Left</p>
        <span class="dot_seperator"></span>
        <p>Ships in 24 hrs</p>
        <span class="dot_seperator"></span>
        <p>{{ product.metafields.custom.benefit | default: 'Product Benefit' }}</p>
      </div>
    </div>
  </div>
</a>
